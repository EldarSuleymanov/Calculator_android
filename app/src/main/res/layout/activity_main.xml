<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/secret"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        >

        <TextView
            android:id="@+id/sqrt"
            style="@style/ActionButton"
            android:onClick="Sqrt"
            android:tag="21"
            android:text="sqrt"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pow"
            style="@style/ActionButton"
            android:onClick="Buttons"
            android:tag="22"
            android:text="pow"
            android:visibility="invisible" />

    </LinearLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="123sp"
        android:ellipsize="end"
        android:gravity="end"

        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                style="@style/ActionButton"
                android:onClick="Buttons"
                android:tag="10"
                android:text="C" />

            <TextView
                style="@style/ActionButton"
                android:onClick="convertSign"
                android:tag="17"
                android:text="+/-" />

            <TextView
                style="@style/ActionButton"
                android:onClick="secretFunction"
                android:tag="20"
                android:text="extra" />

            <TextView
                android:id="@+id/btn_divide"
                style="@style/ActionButton"
                android:onClick="Buttons"
                android:tag="11"
                android:text="/" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_7"
                android:text="7"
                android:onClick="Numbers"
                android:tag="7"
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_8"
                android:text="8"
                android:onClick="Numbers"
                android:tag="8"
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_9"
                android:text="9"
                android:onClick="Numbers"
                android:tag="9"
                />

            <TextView
                android:id="@+id/btn_multiply"
                style="@style/ActionButton"
                android:onClick="Buttons"
                android:tag="12"
                android:text="*" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_4"
                android:text="4"
                android:onClick="Numbers"
                android:tag="4"
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_5"
                android:text="5"
                android:onClick="Numbers"
                android:tag="5"
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_6"
                android:text="6"
                android:onClick="Numbers"
                android:tag="6"
                />

            <TextView
                android:id="@+id/btn_minus"
                style="@style/ActionButton"
                android:onClick="Buttons"
                android:tag="13"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_1"
                style="@style/NumberButton"
                android:onClick="Numbers"
                android:tag="1"


                android:text="1" />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_2"
                android:text="2"
                android:onClick="Numbers"
                android:tag="2"
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_3"
                android:text="3"
                android:onClick="Numbers"
                android:tag="3"
                />

            <TextView
                android:id="@+id/btn_plus"
                style="@style/ActionButton"
                android:onClick="Buttons"
                android:tag="14"
                android:text="+" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_point"
                style="@style/NumberButton"
                android:onClick="Buttons"
                android:tag="16"
                android:text="." />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_0"
                android:text="0"
                android:onClick="Numbers"
                android:tag="0"
                />

            <TextView
                android:id="@+id/btn_back"
                style="@style/NumberButton"
                android:onClick="backspace"
                android:tag="18"
                android:text="back" />

            <TextView
                android:id="@+id/btn_equal"
                style="@style/ActionButton"
                android:onClick="Buttons"
                android:tag="15"
                android:text="=" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>